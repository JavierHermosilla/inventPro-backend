{
  "name": "inventpro",
  "version": "1.0.0",
  "description": "Sistema de gestión de inventarios y órdenes de compra con panel de administrador para pymes",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "db:reset": "node ./scripts/db-reset.cjs",
    "db:migrate": "sequelize-cli db:migrate --config config/config.cjs",
    "db:migrate:undo": "sequelize-cli db:migrate:undo --config config/config.cjs",
    "db:seed:admin": "sequelize-cli db:seed --seed 20250923153907-seed-admin.cjs --config config/config.cjs",
    "db:seed:all": "sequelize-cli db:seed:all --config config/config.cjs",
    "db:seed:undo": "sequelize-cli db:seed:undo --config config/config.cjs",
    "smoke": "powershell -ExecutionPolicy Bypass -File ./scripts/smoke.ps1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/jest.setup.js"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": { "node": "current" }
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JavierHermosilla/inventpro.git"
  },
  "keywords": [
    "inventario",
    "ordenes",
    "compra",
    "sistema",
    "express",
    "nodejs",
    "postgresql",
    "sequelize",
    "api-rest",
    "gestión",
    "pymes",
    "panel-administrativo",
    "jwt"
  ],
  "author": "Javier Hermosilla",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JavierHermosilla/inventpro/issues"
  },
  "homepage": "https://github.com/JavierHermosilla/inventpro#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "bcryptjs": "3.0.2",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.2.0",
    "express": "5.1.0",
    "express-rate-limit": "8.0.1",
    "helmet": "8.1.0",
    "hpp": "0.2.3",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "morgan": "1.10.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "prom-client": "15.1.3",
    "sequelize": "6.37.7",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "winston": "3.17.0",
    "xss": "1.0.15",
    "zod": "4.0.8"
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-env": "7.28.0",
    "@testcontainers/postgresql": "11.5.1",
    "@types/jest": "30.0.0",
    "babel-jest": "30.0.5",
    "cross-env": "7.0.3",
    "jest": "30.0.5",
    "nodemon": "3.1.10",
    "sequelize-cli": "6.6.2",
    "standard": "17.1.2",
    "supertest": "7.1.4"
  },
  "eslintConfig": {
    "extends": "standard"
  }
}
